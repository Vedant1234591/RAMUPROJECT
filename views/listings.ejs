<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ved laundary</title>
    <link rel="stylesheet" href="/stylesheet/listing.css">
    <link href="/stylesheet/output.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>  <%- include("./includes/navbar.ejs") %>
   
    <main class="container">
        <section class="hero">
            <h2>Discover laundary near you</h2>
            <p>come and clean your cloth</p>
            
/            <a href="/newlaundary" class="btn btn-outline">create a laundary</a>
        </section>

        <section id="events">
            <div class="section-title">
                <h2></h2>
                <p>Find your best washing center</p>
            </div>

           
            <div class="events-grid" id="eventsContainer">
                <% allListings.forEach(function(event) { %>
                <div class="event-item">
                    <img src="<%= event.image %>" alt="<%= event.title %>" class="event-image">
                    <div class="event-content">
                        <span class="event-category"><%= event.category %></span>
                        <h3 class="event-title"><%= event.title %></h3>
                        <p class="event-description"><%= event.description %></p>
                        <div class="event-details">
                            
                            <div><i class="fas fa-map-marker-alt"></i> <%= event.latitude %> , <%= event.longitude %></div>
                        </div>
                        <div class="event-footer">
                            <div class="event-price">Contact - <%= event.phone %><span></span></div>
                           
                   
                    </div>
                </div>
                <% }); %>
            </div>
        </section>
    </main>
    <%- include("./includes/footer.ejs") %>

   
</body>
</html>