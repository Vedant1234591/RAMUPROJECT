<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - VED Laundry</title>
    <link rel="icon" href="/images/logo.png" type="image/png">
    <link href="/stylesheet/output.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-slate-600">
    <%- include("./includes/navbar.ejs") %>
    
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">My Orders</h2>
            
            <% if(orders.length === 0) { %>
                <div class="text-center py-8">
                    <p class="text-gray-600 text-lg">No orders found</p>
                    <a href="/services" class="mt-4 inline-block bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700">
                        Browse Services
                    </a>
                </div>
            <% } else { %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <% orders.forEach(order => { %>
                        <div class="bg-gray-50 p-6 rounded-xl shadow-md">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-800">
                                        Order #<%= order._id.toString().slice(-6) %>
                                    </h3>
                                   
                                </div>
                                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">
                                    Completed
                                </span>
                            </div>
                            
                            <div class="space-y-3">
                                <div>
                                    <span class="font-medium text-gray-700">Items:</span>
                                    <p class="text-gray-600"><%= order.products %></p>
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <span class="font-medium text-gray-700">Clothes:</span>
                                        <p class="text-gray-600"><%= order.totalcloth %> items</p>
                                    </div>
                                    <div>
                                        <span class="font-medium text-gray-700">Weight:</span>
                                        <p class="text-gray-600"><%= order.totalweight %> kg</p>
                                    </div>
                                </div>
                                <div>
                                    <span class="font-medium text-gray-700">Total:</span>
                                    <p class="text-2xl font-bold text-blue-600">â‚¹<%= order.totalamount.toFixed(2) %></p>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </section>

    <%- include("./includes/footer.ejs") %>
    <script src="/javascript/script.js"></script>
</body>
</html>